<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.example.movie.ui.movie.MovieFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_tv_show"
        android:name="com.example.movie.ui.tvshow.TvShowFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_tv_show" />

    <fragment
        android:id="@+id/navigation_watch_list"
        android:name="com.example.movie.ui.watchlist.WatchListFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_watch_list" />
</navigation>